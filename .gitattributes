# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary

# Model files
*.pt binary
*.pth binary
*.onnx binary
*.h5 binary
*.pb binary

# Video files
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary
*.flv binary
*.wmv binary

# Image files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.bmp binary
*.ico binary
*.svg binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.rar binary
*.7z binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
